                <exclude>site/src/main/webapp/css/bootstrap.css</exclude>
                <exclude>site/src/main/webapp/css/facebook/yui-css.css</exclude>
                <exclude>site/src/main/webapp/css/font-awesome.css</exclude>
                <exclude>site/src/main/webapp/css/jquery-ui-1.10.2.custom.min.css</exclude>
                <exclude>site/src/main/webapp/css/mobile/yui-css.css</exclude>
                <exclude>site/src/main/webapp/css/revolution_settings.css</exclude>
                <exclude>site/src/main/webapp/fonts/open-sans.css</exclude>
                <exclude>site/src/main/webapp/fonts/raleway.css</exclude>

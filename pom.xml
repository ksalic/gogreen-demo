                <exclude>site/src/main/webapp/js/syntaxhighlighter_3.0.83/**</exclude>
                <exclude>site/src/main/webapp/js/formcheck/**</exclude>
                <exclude>site/src/main/webapp/js/jquery**</exclude>
                <exclude>site/src/main/webapp/js/galleryview-2.1.1/**.js</exclude>
                <exclude>site/src/main/webapp/js/activeaxon_menu.js</exclude>
                <exclude>site/src/main/webapp/js/mootools**.js</exclude>
                <exclude>site/src/main/webapp/css/style.css</exclude>
                <exclude>site/src/main/webapp/css/tipsy.css</exclude>
                <exclude>site/src/main/webapp/css/yui-css.css</exclude>

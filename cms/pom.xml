      <artifactId>hippo-addon-eforms-repository</artifactId>
    </dependency>

    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-cms-api</artifactId>
    </dependency>

    <!-- explicitly fix utilities version; selection plugins prefer 2.18.00 -->
    <dependency>
      <groupId>org.onehippo.cms7</groupId>
      <artifactId>hippo-repository-utilities</artifactId>
    </dependency>

    <dependency>
      <groupId>com.onehippo.cms7</groupId>
      <artifactId>hippo-addon-targeting-frontend-api</artifactId>
    </dependency>

    <dependency>
      <groupId>com.onehippo.cms7</groupId>
